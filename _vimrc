" show line number
set number

" show hilight of search
set hlsearch

" set indent-space 2
set shiftwidth=2

" set tab indent-space 2
set softtabstop=2

" set smartindent
set smartindent

" show tab 2
set tabstop=2

" not show tool-bar
set guioptions-=T

" show hilight of current line
set cursorline

" show ( to )
set showmatch
